<div class="row-fluid">
  <div class="span12">
    
    <div class="well">
    
      <video controls style="width:100%;height:100%;">
        <source src="<%= @post[:video_link] %>" >
      </video>
    </div>

  </div>
</div>

<% if !@post.slides.nil? %>
<div class="row-fluid">

  <%= render layout: "shared/collapse", locals: { title: "Slides", width: '12', unique_id: 'post_slides', should_hide: false } do %>
    
    <div>
      <% @post.slides.each_with_index do |slide, index| %>
      
        <div class="slide" name="<%= slide.order %>" >
          <div class="text-center">
            <h3><%= slide.title %></h3>
          </div>
          <hr />
          <div>
            <p><%= slide.body %></p>
          </div>
        </div>
      
      <% end %>
    </div>
    
    <ul class="pager">
      <li class="previous">
        <a id="previous_slide" class="disabled">&larr; Last</a>
      </li>
      <li class="next">
        <a id="next_slide">Next &rarr;</a>
      </li>
    </ul>
      
  <% end %>
  
</div>
<% end %>

<div class="row-fluid">

  <%= render layout: "shared/collapse", locals: { title: "Content", width: '12', unique_id: 'post_content', should_hide: false } do %>
 
    
      <%= raw(@post.body) %>
      

  <% end %>
  
</div>
