<div class="row-fluid">
  <div class="span12">
    <div class="well">
      <div class="row-fluid">
        <h1 class="span6">All Your Posts</h1>

        <div class="span6 text-right" style="padding-top:15px;">
          <% if !@cur_user.guest? then disabled = "" else disabled = "disabled" end %>
          <%= link_to "Create New Post", new_post_path, { class: "btn btn-info #{disabled}" } %>
        </div>
      </div>
    </div>
  </div>
</div>
    
<div class="row-fluid">
  <div class="span12">
    <% if @posts.any? %>
    
    <div class="well">
    
      <% @posts.each do |post|%>

      <h2 class="text-center"><%= post.title %></h2>
      <div class="well">
        <%= link_to "delete", post_path(post), { method: :delete, data: { confirm: 'Sure?' }, class: "btn btn-danger pull-right" } %>
        <%= raw(post.body) %>
      </div>
      

      <hr />
      
      <%end%>
      
    </div>

    <% end %>
  </div>
</div>