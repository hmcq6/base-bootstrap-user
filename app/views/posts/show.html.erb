<div class="row-fluid">
  <div class="span12">
    <div class="well">
      <div class="row-fluid">
        <h1 class="span6"><%= @post.title.capitalize %></h1>
        
        <% if @cur_user == @post.user %>
          <div class="span6"> <%= button_to "delete", post_path(@post), { method: :delete, data: { confirm: 'Sure?' }, class: "btn btn-danger pull-right", style: "margin-top: 15px" } %> </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
  
<% if @post[:video_link].nil? %>
  <%= render "non_video" %>
<% else%>
  <%= render "video" %>
<% end %>
