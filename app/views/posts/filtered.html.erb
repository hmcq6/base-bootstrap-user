<div class="row-fluid">
  <div class="span3">
    <div class="well">
      <img src="/assets/Mike_3.jpg" />
    </div>
  </div>
  <div class="span9">
    <div class="well">
      <div class="row-fluid">
        <h1 class="span3"><%= @filter.capitalize %></h1>

        <div class="span6 text-right" style="padding-top:15px;">
          <% if is_guest(@cur_user) %>
            <% classes = 'btn btn-info disabled' %>
          <%else%>
            <% classes = 'btn btn-info' %>
          <%end%>
            <%= link_to "Create New Post", new_post_path, { class: classes } %>
          
        </div>
      </div>
    </div>
  </div>
</div>
  
  
<div class="row-fluid">
  <div class="span12">
    
    <div class="well">
    
      <% @posts.each do |post|%>

      <h2 class="text-center"><%= post.title %></h2>
      <div class="well">
        <%if @cur_user == post.user %>
          <%= link_to "delete", post_path(post), { method: :delete, data: { confirm: 'Sure?' }, class: "btn btn-danger pull-right" } %>
        <%end%>
        <%= raw(post.body) %>
      </div>
      

      <hr />
      
      <%end%>
      
    </div>

  </div>
</div>
