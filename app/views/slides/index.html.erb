<h1>Listing slides</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Order</th>
    <th>Post</th>
    <th>Timing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slides.each do |slide| %>
  <tr>
    <td><%= slide.title %></td>
    <td><%= slide.body %></td>
    <td><%= slide.order %></td>
    <td><%= slide.post_id %></td>
    <td><%= slide.timing %></td>
    <td><%= link_to 'Show', slide %></td>
    <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
    <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

